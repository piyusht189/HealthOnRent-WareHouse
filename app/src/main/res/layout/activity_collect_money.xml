<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ls"
    android:background="#115115"
    tools:context="com.bshealthcare.healthonrent_warehouse.CollectMoney">
    <TextView
        android:id="@+id/typo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/zxing_custom_viewfinder_laser"
        android:gravity="center"
        android:text="Collect Money"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/zxing_status_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/typo"
        android:orientation="vertical"
        android:layout_above="@+id/last"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/given"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:hint="Given"
            android:inputType="number"
            android:text="Set"
            android:textColor="#fcfcfc"
            android:textSize="30dp"
            android:textColorHint="#0425ff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Unpaid:"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/discount"
            android:textColor="#ff0409"

            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Total:"
            android:textSize="30dp"
            android:textColor="#ffffff"

            android:gravity="center"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:textColor="#3995ff"
            android:gravity="center"
            android:textSize="30dp"

            android:id="@+id/total"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/last"
        android:layout_height="50dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:background="#481360"
            android:layout_weight="1"></Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photo"
            android:text="Upload Photo"
            android:gravity="center"
            android:background="#c11241"
            android:layout_weight="1"></TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/done"
            android:text="Done"
            android:onClick="done"
            android:gravity="center"
            android:background="#12482d"
            android:layout_weight="1"></Button>
    </LinearLayout>

</RelativeLayout>
