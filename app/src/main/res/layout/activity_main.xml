<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bshealthcare.healthonrent_warehouse.MainActivity">


    <Button
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/de"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="#fc366e57"
        android:onClick="scan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Check Availability"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/de">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@color/zxing_custom_viewfinder_laser"
            android:gravity="center"
            android:text="WareHouse Management"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Log Out"
            android:textColor="#fff"
            android:onClick="logout"
            android:background="#4e1c4e"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:layout_below="@+id/scan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/warehouseout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:onClick="warehouseout"
            android:text="Warehouse Out"
            android:textSize="12sp" />

        <Button
            android:id="@+id/warehousein"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:onClick="warehousein"
            android:text="Warehouse In"

            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/first"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/warehousetransfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:onClick="warehousetransfer"
            android:text="Warehouse Tansfer"
            android:textSize="12sp" />

        <Button
            android:id="@+id/sendrepair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:onClick="sendrepair"
            android:text="Send for Repair"

            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="100dp"
        android:layout_below="@+id/second"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/storepickup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:layout_marginRight="10dp"
            android:onClick="storepickup"
            android:text="Store Pickup"
            android:textSize="15sp" />
        <Button
            android:id="@+id/rentcollection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#fc366e57"
            android:elevation="0dp"
            android:onClick="rentcollection"
            android:text="Rent Collection"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>
