<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="500dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ls"
    android:orientation="vertical"
    tools:context="com.bshealthcare.healthonrent_warehouse.WarehouseOutDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mine"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/zxing_status_text"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#349ff4ee"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textSize="15dp"
                android:text="TextView" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/uaddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="15dp" />
            <!--  -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:background="#3af49fcb"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/uphone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="TextView"
                android:autoLink="phone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/uemail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="email"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#48f4f19f"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pskuid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="TextView" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/pname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="TextView" />
            <!--  -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#5dc2f49f"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/db"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/assigndeliveryboy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="#2e6340"
                android:text="Assign Delivery Boy"
                android:textColor="#fff"
                android:textSize="18dp"
                android:onClick="assign"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/scanforouting"
                android:onClick="scanme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Scan For Outing"
                android:background="#6b3371"
                android:textColor="#fff"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
